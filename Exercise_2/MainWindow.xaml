<Window x:Class="Exercise_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercise 2" Height="300" Width="600">

    <Grid ShowGridLines="True">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1.5*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Border Grid.Column="0" Background="Lime">
            <Viewbox>
                <TextBlock Text="Hello" FontSize="20"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Viewbox>
        </Border>

        <Border Grid.Column="1" Background="Lime">
            <Viewbox>
                <TextBlock Text="Hello" FontSize="35"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Viewbox>
        </Border>

        <Border Grid.Column="2" Background="Lime">
            <Viewbox>
                <TextBlock Text="Hello" FontSize="60"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Viewbox>
        </Border>

        <Border Grid.Column="3" Background="Magenta">
            <Viewbox>
                <TextBlock Text="Hello" FontSize="120"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Viewbox>
        </Border>

    </Grid>
</Window>
