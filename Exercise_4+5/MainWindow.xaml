<Window x:Class="Exercise_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercise 4 + 5" Height="300" Width="300">

    <Window.Resources>

        <Style x:Key="ColorRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Background" Value="White" />

            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">

                    <Setter Property="Foreground" 
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=Content}" />

                    <Setter Property="Background" 
                            Value="{Binding RelativeSource={RelativeSource Self}, Path=Content}" />
                </Trigger>
            </Style.Triggers>

        </Style>

    </Window.Resources>

    <StackPanel Margin="20">

        <TextBlock Text="Foreground Color:" FontWeight="Bold" Margin="0,0,0,10"/>

        <RadioButton Content="Red"   GroupName="ForegroundGroup"
                     Style="{StaticResource ColorRadioButtonStyle}" />
        <RadioButton Content="Blue"  GroupName="ForegroundGroup"
                     Style="{StaticResource ColorRadioButtonStyle}" />
        <RadioButton Content="Green" GroupName="ForegroundGroup"
                     Style="{StaticResource ColorRadioButtonStyle}" />

        <TextBlock Text="Background Color:" FontWeight="Bold" Margin="0,20,0,10"/>

        <RadioButton Content="Red"   GroupName="BackgroundGroup"
                     Style="{StaticResource ColorRadioButtonStyle}" />
        <RadioButton Content="Blue"  GroupName="BackgroundGroup"
                     Style="{StaticResource ColorRadioButtonStyle}" />
        <RadioButton Content="Green" GroupName="BackgroundGroup"
                     Style="{StaticResource ColorRadioButtonStyle}" />

    </StackPanel>

</Window>
