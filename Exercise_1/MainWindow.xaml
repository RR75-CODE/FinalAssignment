<Window x:Class="Exercise_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercise 1" Height="300" Width="300">

    <Grid ShowGridLines="True">

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Ellipse Fill="Red"
                 Grid.Row="3"
                 Grid.Column="3"/>

        <Rectangle Fill="Purple"
                   Grid.Row="1"
                   Grid.Column="0"/>

        <Rectangle Fill="Orange"
                   Grid.Row="4"
                   Grid.Column="0"
                   Grid.RowSpan="2"/>

        <Ellipse Fill="Yellow"
                 Grid.Row="4"
                 Grid.Column="4"
                 Grid.RowSpan="2"
                 Grid.ColumnSpan="2"/>

        <Ellipse Fill="Green"
                 Grid.Row="0"
                 Grid.Column="4"
                 Grid.ColumnSpan="2"/>

    </Grid>
</Window>